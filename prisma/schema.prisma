generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Coord {
  lat Float
  lng Float
}

type Place {
  name     String
  location Coord
}

model Route {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  source      Place
  destination Place
  distance    Float
  duration    Float
  directions  Json
  cratedAt    DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
